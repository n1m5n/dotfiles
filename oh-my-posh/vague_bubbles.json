{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "background": "#252530",
                    "foreground": "#D8647E",
                    "leading_diamond": "\ue0b6",
                    "style": "diamond",
                    "template": "{{ .UserName }}",
                    "trailing_diamond": "\ue0b4 ",
                    "type": "session"
                },
                {
                    "background": "#252530",
                    "foreground": "#99B782",
                    "leading_diamond": "\ue0b6",
                    "style": "diamond",
                    "template": "\ue5ff {{ .Path }}",
                    "trailing_diamond": "\ue0b4",
                    "type": "path"
                },
                {
                    "background": "#252530",
                    "foreground": "#8BA9C1",
                    "leading_diamond": " \ue0b6",
                    "style": "diamond",
                    "template": "{{ .HEAD }}",
                    "trailing_diamond": "\ue0b4",
                    "type": "git"
                },
                {
                    "background": "#252530",
                    "foreground": "#F3BE7C",
                    "leading_diamond": " \ue0b6",
                    "style": "diamond",
                    "template": "{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}",
                    "trailing_diamond": "\ue0b4",
                    "type": "python"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 3
}

